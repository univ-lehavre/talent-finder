{
	"name": "talent-finder",
	"private": true,
	"version": "0.5.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"type-check": "tsc --noEmit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"audit": "pnpm audit --audit-level=moderate",
		"knip": "knip",
		"ready": "pnpm run format && pnpm run type-check && pnpm run check && pnpm run lint && pnpm run knip && pnpm run audit && pnpm run test && pnpm run build",
		"changeset": "pnpm @changesets/cli",
		"bump": "pnpm dlx @changesets/cli version"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@commitlint/types": "^20.3.1",
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.39.1",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^22",
		"@types/swagger-ui-dist": "^3.30.6",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"knip": "^5.81.0",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.1",
		"vite": "^7.2.6",
		"vitest": "^4.0.15"
	},
	"dependencies": {
		"@iconify/svelte": "^5.2.1",
		"node-appwrite": "^21.1.0",
		"simple-git": "^3.30.0",
		"swagger-ui-dist": "^5.31.0",
		"zod": "^4.3.5"
	},
	"lint-staged": {
		"*.{ts,js,svelte}": [
			"prettier --write",
			"eslint --fix"
		],
		"*.{json,md,css,html}": [
			"prettier --write"
		]
	}
}
