{
	"name": "talent-finder",
	"private": true,
	"version": "0.5.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"type-check": "tsc --noEmit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"test:coverage": "vitest run --coverage",
		"docs:api": "typedoc",
		"audit": "pnpm audit --audit-level=moderate",
		"knip": "knip",
		"cpd": "jscpd src",
		"license-audit": "license-checker --summary --excludePackages 'talent-finder@0.5.0'",
		"license-audit:check": "license-checker --excludePackages 'talent-finder@0.5.0' --onlyAllow 'MIT;ISC;Apache-2.0;BSD-2-Clause;BSD-3-Clause;0BSD;CC0-1.0;CC-BY-4.0;Python-2.0;Unlicense;BlueOak-1.0.0;LGPL-3.0-only'",
		"ready": "pnpm run format && pnpm run type-check && pnpm run check && pnpm run lint && pnpm run knip && pnpm run cpd && pnpm run license-audit:check && pnpm run audit && pnpm run test && pnpm run build",
		"changeset": "pnpm @changesets/cli",
		"bump": "pnpm dlx @changesets/cli version"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.2",
		"@changesets/cli": "^2.29.8",
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@commitlint/types": "^20.3.1",
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.39.1",
		"@sveltejs/adapter-node": "^5.5.1",
		"@sveltejs/kit": "^2.49.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^22",
		"@types/swagger-ui-dist": "^3.30.6",
		"@vitest/coverage-v8": "^4.0.17",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-functional": "^9.0.2",
		"eslint-plugin-jsdoc": "^62.0.0",
		"eslint-plugin-no-secrets": "^2.2.1",
		"eslint-plugin-security": "^3.0.1",
		"eslint-plugin-sonarjs": "^3.0.5",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"jscpd": "^4.0.7",
		"jsdom": "^27.4.0",
		"knip": "^5.81.0",
		"license-checker": "^25.0.1",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.46.4",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.18",
		"typedoc": "^0.28.16",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.1",
		"vite": "^7.2.6",
		"vitest": "^4.0.15",
		"vitest-axe": "^0.1.0"
	},
	"dependencies": {
		"@iconify/svelte": "^5.2.1",
		"node-appwrite": "^21.1.0",
		"simple-git": "^3.30.0",
		"swagger-ui-dist": "^5.31.0",
		"zod": "^4.3.5"
	},
	"lint-staged": {
		"*.{ts,js,svelte}": [
			"prettier --write",
			"eslint --fix"
		],
		"*.{json,md,css,html}": [
			"prettier --write"
		]
	}
}
